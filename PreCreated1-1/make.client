CFLAGS =
CC = gcc
SOURCES = TcpClient.c time_cli.c
OBJECTS = $(SOURCES:.c=.o)
EXECUTABLE =  client

all: exec

debug: CFLAGS += -g3
debug: clean
debug: exec

exec: $(OBJECTS)
	$(CC) $(OBJECTS) -o $(EXECUTABLE) $(CFLAGS)

.PHONY: clean
clean:
	rm $(EXECUTABLE) $(OBJECTS)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(CFLAGS) -c $(OBJECTS) $@
